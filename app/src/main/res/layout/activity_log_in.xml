<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:focusableInTouchMode="true"
    android:clickable="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/text" />

    <EditText
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/person"
        android:imeOptions="actionDone"
        android:id="@+id/email_log"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow_hint"
        android:backgroundTint="@color/yellow"/>

    <EditText
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:id="@+id/password_log"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow_hint"
        android:backgroundTint="@color/yellow"/>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/signUp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_hover"
        android:fontFamily="@font/cousine"
        android:lineSpacingExtra="18sp"
        android:text="Login"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-60dp" />

    <TextView
        android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/text_forgotPass"
        android:textAllCaps="false"
        android:textColor="@drawable/text_hover"
        android:textSize="15sp"
        app:fontFamily="@font/carrois_gothic" />


</LinearLayout>